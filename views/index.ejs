<!DOCTYPE html>
<html lang="en">

<head>
    <% include navi/head %>
    <link href="css/wallet/login.css" rel="stylesheet">
</head>

<body style="font-family: 'Kanit', sans-serif;">
    <div class="container h-100">
        <div class="d-flex justify-content-center h-100">
          <div class="login_card">
            <div class="d-flex justify-content-center">
              <div class="logo_container">
                <img src="images/pig.jpg" class="logo" alt="Logo">
              </div>
            </div>
            <div class="d-flex justify-content-center form_container">
              <form>
                  <div class="login_name"><% include navi/header %></div><br/>
                  <div class="d-flex flex-column bd-highlight">
                      <div class="p-1 bd-highlight"></div>
                    </div>
                        <div class="input-group mb-4">
                            <div class="input-group-append">
                                <span class="input-group-text"></span>
                            </div>
                            <input type="text" id="id" class="form-control input_user" value="" placeholder="userid">
                        </div>
                        <div class="input-group mb-4">
                            <div class="input-group-append">
                                <span class="input-group-text"></span>
                            </div>
                            <input type="password" id="password" class="form-control input_pass" value=""
                                placeholder="password">
                        </div>
                        <div class="d-flex justify-content-center mt-4 login_container">
                            <button type="button" id="login" class="btn login_btn">Login</button>
                            <button type="button" id="create" class="btn login_btn">Sing Up</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

  <script>
    $('#login').click(function () {
      $.ajax({
        url: '/login_process',
        dataType: 'json',
        type: 'POST',
        data: {
          'id': $('#id').val(),
          'password': $('#password').val()
        },
        success: function (result, body, { status }) {
          if (status === 200) {
            alert('아이디 또는 비밀번호가 일치하지 않습니다.')
          } else if (status === 202) {
            alert('로그인 성공')
            window.location.href = '/main'
          }
        }
      });
    })

    $('#create').click(function () {
      window.location.href = '/create'
    })

  </script>
</body>

</html>